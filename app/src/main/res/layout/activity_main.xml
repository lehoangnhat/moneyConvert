<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/darker_gray">

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputText"
        android:layout_width="150dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="12dp"
        tools:background="@android:color/background_light"
        android:layout_height="40dp"
        android:layout_above="@+id/btnChange"
        android:layout_alignParentStart="true"
        android:hint="input" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/outputText"
        android:layout_width="150dp"
        tools:background="@android:color/background_light"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/inputText"
        android:layout_toEndOf="@+id/inputText"
        android:hint="output" />

    <Spinner
        android:id="@+id/inputSpinner"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_light_frame"
        android:popupBackground="@android:color/darker_gray"
        android:layout_marginBottom="20dp"
        android:layout_width="150dp"
        android:layout_above="@+id/outputText"
        android:layout_alignStart="@+id/inputText" />

    <Spinner
        android:id="@+id/outputSpinner"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_light_frame"
        android:popupBackground="@android:color/darker_gray"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/inputSpinner"
        android:layout_alignStart="@+id/outputText" />

    <Button
        android:text="Start"
        android:id="@+id/btnChange"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="205dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Money Converter"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold" />
</RelativeLayout>